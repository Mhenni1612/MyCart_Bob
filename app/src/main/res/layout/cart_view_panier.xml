<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textViewNom"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewGT"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/textViewNom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPrix"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/textViewGT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/ic_remove_shopping_cart_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/elegantNumberd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/buttonDelete"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    </RelativeLayout>



</android.support.v7.widget.CardView>